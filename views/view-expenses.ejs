<% include partial/head %>
  <% include partial/navbar %>
    <body>
      <div class="wrapper padded">
        <div class="row">
        <div col-md-6 col-md-offset-3>
          <h2 class="text-center">Hi, here's a breakdown of how you've been spending your money</h2>
          <br>
            <% let amount = 0 %>
            <% for(item in expenses) {
              amount += Number(expenses[item].amount_spent);
            } %>
            <h4 class="heading">Total Flex Expenses: <span class="text-danger"><%= amount %></span></h4>
            <br>
            <table class="table table-striped table-hover ">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Flex Item</th>
                  <th>Amount Spent</th>
                </tr>
              </thead>
              <tbody>
                <% if(expenses) { %>
                  <% let count = 1 %>
                  <% for(item in expenses) { %>
                  <tr>
                    <td><%= count %></td>
                    <td><%= expenses[item].flex_item %></td>
                    <td><%= expenses[item].amount_spent %></td>
                  </tr>
                  <% count += 1 %>
                  <% } %>
                <% } else { %>
                  <p class="text-center lead">No records yet</p>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <% include partial/footer %>
    </body>